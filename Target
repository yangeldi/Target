//Tarefa 2 em C

#include <stdio.h>

int fibonacci(int x)
{
   int n, fib, a=0, b=1, cont;


   scanf("%d", &n);
   printf("0\n");
   printf("1\n");
  
   for(int i = 0; i < n-2 ; i++){
       fib = a + b;
       a = b;
       b = fib;
       printf("%d\n", fib);
       if (fib == n){
        cont = n;
       }   
   }
   if (cont == 0){
     printf("%d nao pertence a sequencia\n", n);

   }else{
         printf("%d pertence a sequencia\n", cont);
   }
   return 0;
}


int main(){
   int n;

   fibonacci(n);
return 0;
}

//Tarefa 3 em C

#include <stdio.h>

int main(){
    int cont=0, dias = 0;
    double valor[31], maior = valor[0], menor = valor[0], media=0, soma=0;

    for (int i = 0; i < 30; i++){
        scanf("%lf", &valor[i]);
        if (valor[i] > 0){
            cont++;
        }
    }   
    for (int i = 0; i < 30; i++){
        if (valor[i] < menor){
                menor = valor[i];
            }
        if(valor[i] > maior ){
                maior = valor[i];
            }
        soma = soma + valor[i];
    }   
     media = soma / cont;
     for (int i = 0; i < 30; i++)
     {
        if (valor[i] > media){
            dias++;
        }
     }
     
        

    printf("Menor valor de faturamento: %lf\nMaior valor de faturamento: %lf\nDias que superaram a media: %d\n%lf", menor, maior, dias, media);

return 0;
}

//Tarefa 4 em C

#include <stdio.h>

int main() {
    float sp = 67836.43, rj = 36678.66, mg = 29229.88, es = 27165.48, outros = 19849.53;
    float total = sp + rj + mg + es + outros;

    float perc_sp = (sp / total) * 100;
    float perc_rj = (rj / total) * 100;
    float perc_mg = (mg / total) * 100;
    float perc_es = (es / total) * 100;
    float perc_outros = (outros / total) * 100;

    printf("Percentual de cada estado:\n");
    printf("SP: %.2f%%\n", perc_sp);
    printf("RJ: %.2f%%\n", perc_rj);
    printf("MG: %.2f%%\n", perc_mg);
    printf("ES: %.2f%%\n", perc_es);
    printf("Outros: %.2f%%\n", perc_outros);

    return 0;
}

//Tarefa 5 em C
#include <stdio.h>
#include <string.h>

int main() {
    char str[100], str_invertida[100];
    int i, tam;

    printf("Digite uma string: ");
    scanf("%s", str);

    tam = strlen(str);

    for (i = 0; i < tam; i++) {
        str_invertida[tam - i - 1] = str[i];
    }
    str_invertida[tam] = '\0';

    printf("String original: %s\n", str);
    printf("String invertida: %s\n", str_invertida);

    return 0;
}
